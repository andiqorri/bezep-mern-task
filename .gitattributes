# Ignore files generated by build processes
/dist/**/* binary
/build/**/* binary

# Normalize line endings for text files
* text=auto eol=lf

# Ignore files and directories generated by package managers
/node_modules/**/* binary
/yarn.lock binary
/package-lock.json binary

# Ignore editor and IDE files
*.swp binary
*.swo binary
*.swn binary
.vscode/ binary
.idea/ binary

*.md text

# Ignore temporary files
*.tmp binary

# Ignore compiled code
*.class binary
*.jar binary
*.dll binary

# Ignore system and backup files
*.swp binary
*.swo binary
*.swn binary
*.DS_Store binary
*.bak binary

# Normalize file permissions
* -text
